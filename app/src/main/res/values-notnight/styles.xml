<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="background">
        <item name="android:background">@color/white</item>
    </style>

    <style name="editText">
        <item name="backgroundTint">@color/glitter</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:background">@color/glitter</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textCursorDrawable">@drawable/cursor_white</item>
        <item name="android:textColorHint">@color/alto</item>
        <item name="android:textColor">@color/curious_blue</item>
    </style>

    <style name="button">
        <item name="android:background">@drawable/background_button</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/button</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="textView">
        <item name="android:textColor">@color/curious_blue</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="MyDatePickerStyle" parent="@android:style/Widget.Material.DatePicker">
        <item name="colorControlNormal">@color/curious_blue</item>
        <item name="android:headerMonthTextAppearance">@color/curious_blue</item>
    </style>

    <style name="MyRadioButton" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/alto</item>
        <item name="colorControlActivated">@color/alto</item>
    </style>

    <style name="background_item">
        <item name="android:background">@color/glitter</item>
    </style>

    <style name="background_hint">
        <item name="android:textColor">@color/alto</item>
    </style>

    <style name="background_custom">
        <item name="android:background">@color/curious_blue</item>
        <item name="backgroundTint">@color/curious_blue</item>
    </style>

    <style name="background_dialog_title">
        <item name="android:textColor">@color/curious_blue</item>
    </style>

    <style name="MyCheckBox">
        <item name="colorControlNormal">@color/curious_blue</item>
        <item name="colorControlActivated">@color/curious_blue</item>
    </style>


</resources>