<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="button">
        <item name="android:background">@drawable/background_button</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/button</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="editText">
        <item name="backgroundTint">@color/steel_gray</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:background">@color/steel_gray</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textCursorDrawable">@drawable/cursor_white</item>
        <item name="android:textColorHint">@color/nevada</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="textView">
    <item name="android:textColor">@color/dark_pink</item>
    <item name="android:textSize">25sp</item>
    </style>

    <style parent="Theme.AppCompat.Dialog" name="FullScreenDialogStyle">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="MyRadioButton" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/nevada</item>
        <item name="colorControlActivated">@color/nevada</item>
    </style>


    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_top</item>
        <item name="android:windowExitAnimation">@anim/anim_bottom</item>
    </style>

    <style name="MarginProfile" parent="textView">
        <item name="android:padding">10dp</item>
    </style>

    <style name="MarginEditText">
        <item name="android:textColor">@color/dark_pink_</item>
        <item name="android:textColorHint">@color/nevada</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>

    <style parent="Theme.AppCompat.NoActionBar" name="SplashTheme">
        <item name="android:background">@drawable/startfon</item>
    </style>

    <style name="MyDatePickerStyle" parent="@android:style/Widget.Material.DatePicker">
        <item name="colorControlNormal">@color/dark_pink</item>
       <item name="android:headerMonthTextAppearance">@color/dark_pink</item>
    </style>

    <style name="background">
        <item name="android:background">@color/ebony_clay</item>
    </style>

    <style name="background_item">
        <item name="android:background">@color/steel_gray</item>
    </style>

    <style name="background_hint">
        <item name="android:textColor">@color/nevada</item>
    </style>

    <style name="background_custom">
        <item name="android:background">@color/dark_pink</item>
        <item name="backgroundTint">@color/dark_pink</item>
    </style>

    <style name="background_dialog_title">
        <item name="android:textColor">@android:color/white</item>
    </style>


    <style name="MySwitch" parent="Theme.AppCompat">
        <!-- активное состояние (30% прозрачности для фона) -->
        <item name="colorControlActivated">@color/curious_blue</item>

        <!-- неактивное состояние ползунка -->
        <item name="colorSwitchThumbNormal">@color/dark_pink</item>

        <!-- цвет дорожки для неактивного состояния (30% прозрачности) -->
        <item name="android:colorForeground">@color/curious_blue_</item>
    </style>

    <style name="MyCheckBox">
        <item name="colorControlNormal">@color/dark_pink</item>
        <item name="colorControlActivated">@color/dark_pink</item>
    </style>


</resources>